<%# Страница объявления %>
<div class="row ">
  <div class="ad ad-content col-md-12 shadow">
    <div class="text-lg">
      <%= @ad.title %>
    </div>

    <div class="text-md buffer-both">
      <%= @ad.body %>
    </div>

    <div class="col-md-6">
      <%# Все фотографии объявления %>
      <% if @ad.images.attached? %>
        <% @ad.images.each do |image| %>
          <% if image.image? %>
            <%=link_to image_tag(image.variant resize: "100x100"), ads_path %><br />
            <%= link_to t('views.ads.show.delete_image'), purge_attachment_path(image),method: :delete %><br /><br />
          <% else %>
            <%= link_to image.filename, rails_blob_path(image, disposition: "attachment") %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <% if current_user_can_edit?(@ad) %>
      <%= link_to t('views.ads.show.edit'), edit_ad_path(@ad), class: 'btn btn-warning' %>
      <%= link_to t('views.ads.show.delete'), ad_path(@ad),
                  method: :delete, data: {confirm: t('views.ads.show.confirm_delete')}, class: 'btn btn-danger' %>

      <div class="buffer-top">
        <%= @ad.life_cycle %>
      </div>
    <% end %>

    <%= link_to t('views.back'), :back %>
  </div>
</div>
