<form class=" buffer-bottom">
  <h2><%= 'Найденые теги' %></h2>

  <%= form_with url: ads_path, method: :get do |f| %>
    <%= f.collection_select :tag_ids, (@tags || []), :id, :name, {selected: params[:tag_ids]},
                            multiple: true, required: true,
                            class: 'js-multiple-select js-ajax-select w-100', data: {'ajax-url': '/api/tags'} %>

    <button>
      <%= f.submit 'Поиск', class: 'btn btn-outline-success' %>
    </button>
  <% end %>
</form>

<div class="column-1-6">
  <div class="ads-list">
    <%# Рендерим сразу массив объявлений, каждый в паршиале 'ads/ad' %>
    <%= render partial: 'ads/ad', collection: @ads, object: @user_ad %>
  </div>
</div>

<%# Пагинация %>
<div class="text-center">
  <%= paginate @ads_page %>
</div>
