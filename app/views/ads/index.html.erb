<%# Все теги объявлений %>
<div class="text-center text-md buffer-bottom">
  <% @tags.each do |tag| %>
    <%= link_to "##{tag.name}", tag_path(tag), rel: rand(20) %>
  <% end %>
</div>

<div class="column-1-6">
  <div class="ads-list">
    <%# Рендерим сразу массив объявлений, каждый в паршиале 'ads/ad' %>
    <%= render partial: 'ads/ad', collection: @ads, object: @user_ad %>
  </div>
</div>

<%# Пагинация %>
<div class="text-center">
  <%= paginate @ads %>
</div>
