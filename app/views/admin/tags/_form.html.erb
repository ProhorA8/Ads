<%# Админ форма для редактирования тега %>
<%= form_with model: [:admin, tag] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: tag} %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :name %>
    </div>

    <div class="col-sm-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="container">
    <div class="row col-sm-2">
      <%= f.submit t '.save', class: 'btn btn-outline-primary' %>
    </div>

    <div class="row col-sm-2 py-4">
      <%= link_to t('.back'), admin_tags_path %>
    </div>
  </div>
<% end %>
